<UserControl x:Class="Sofware_CMJC_Version_1._0.Vistas.Perfiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sofware_CMJC_Version_1._0.Vistas" xmlns:vistamodelo="clr-namespace:Sofware_CMJC_Version_1._0.VistaModelo" d:DataContext="{d:DesignInstance Type=vistamodelo:PerfilesVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="5" Grid.Row="0">
            <!-- Sección de Búsqueda -->
            <Image Source="\Recursos\lupa.png" 
                Height="25" Width="35" HorizontalAlignment="Left" Margin="2.5,0,0,0"/>
            <TextBox Name="txtBusqueda" Margin="30,-25,450,0"
                  Style="{StaticResource PlaceholderTextBox}"
                  Tag="Buscar por ID, Nombres o Apellidos " Height="20"
                     Text="{Binding TextBusqueda}"/>
        </StackPanel>
        <!-- Sección de Lista de Usuarios -->
        <ListView Name="listaUusarios" Grid.Row="1" Margin="5" ItemsSource="{Binding UsuarioFiltrados}" SelectedItem="{Binding UsuarioSeleccionado}">
            <!-- Columnas de la lista -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="Auto"  Header="ID" DisplayMemberBinding="{Binding LoginName}" />
                    <GridViewColumn Width="Auto"  Header="Nombres" DisplayMemberBinding="{Binding Nombres}" />
                    <GridViewColumn Width="Auto"  Header="Apellidos" DisplayMemberBinding="{Binding Apellidos}" />
                    <GridViewColumn Width="Auto"  Header="Correo" DisplayMemberBinding="{Binding Correo}" />
                    <GridViewColumn Width="Auto"  Header="Tipo Usuario" DisplayMemberBinding="{Binding TipoUsuario}" />
                    <GridViewColumn Width="Auto"  Header="Historias" DisplayMemberBinding="{Binding HistoriasUsuarios.Count}" />
                    <GridViewColumn Width="Auto"  Header="Estado" DisplayMemberBinding="{Binding Estado}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Sección de Botones -->
        <StackPanel Margin="5" Grid.Row="2">
            <Button Content="Nuevo Usuario" 
                 Margin="15,0,0,0"
                 HorizontalAlignment="Left"
                 Style="{StaticResource BotonS3}"
                    Command="{Binding NuevoUsuarioCommand}"/>
            <Button Content="Editar Usuario" 
                 Margin="215,-25,0,0"
                 HorizontalAlignment="Left"
                 Style="{StaticResource BotonS3}"
                    Command="{Binding EditarUsuarioCommand}"/>
            <Button Content="Bloquear Usuario" 
                 Margin="415,-25,0,0"
                 HorizontalAlignment="Left"
                 Style="{StaticResource BotonS3}"
                    Command="{Binding BloquearUsuarioCommand}"/>
            <Button Content="Lista General de Historia/Usuario "
                 Margin="600,-25,0,0"
                 HorizontalAlignment="Left"
                 Style="{StaticResource BotonS3}"
                    Command="{Binding HistoriaUsuarioCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
