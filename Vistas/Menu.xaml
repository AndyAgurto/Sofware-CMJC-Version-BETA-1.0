<Window x:Class="Sofware_CMJC_Version_1._0.Vistas.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sofware_CMJC_Version_1._0.VistaModelo" d:DataContext="{d:DesignInstance Type=local:MenuVM}"
        mc:Ignorable="d"
        Title="Menu" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="40"
     BorderThickness="5" Margin="0,0,0,0">


        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0.5,1.5" EndPoint="1,1">
                <GradientStop Color="{StaticResource Color1}" Offset="1"/>
                <GradientStop Color="{StaticResource Color2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                <GradientStop Color="{StaticResource Color4}" Offset="0"/>
                <GradientStop Color="{StaticResource Color4}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions >
                <!--Navegacion-->
                <ColumnDefinition Width="250"/>
                <!--Contenido-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navegacion-->
            <Border CornerRadius="35"
                     Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,1.5" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource Color3}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel>
                <StackPanel Orientation="Horizontal"
                 Height="186"
                 Margin="10,30,15,0">

                    <Image Source="/Vistas/Recursos/LOGO BLANCO.png"
                VerticalAlignment="Center" Width="237" Stretch="Fill" Height="324"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                 Height="60"
                 Margin="15,15,20,50" Width="230">
                    <Ellipse Height="50"
                  Width="50"
                  Stroke="AliceBlue"
                  StrokeThickness="2"
                  Margin="0,0,0,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EsAdministrador}"  Value="True">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/Vistas/Recursos/doctor.png"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding EsAdministrador}" Value="False">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/Vistas/Recursos/recepcion.png"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <TextBlock x:Name="UserFullNameTextBlock"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="{StaticResource BebasNeueFont}"           
                    VerticalAlignment="Center"
                    Margin="5,0,0,0"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="Wrap" Width="Auto"/>

                </StackPanel>
                <RadioButton Style="{StaticResource Tab}"
                  x:Name="PacientesButton" Height="70"
                    Click="PacientesButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Vistas/Recursos/paciente.png" Style="{StaticResource ImageIcon}"/>
                        <TextBlock Text="PACIENTES" Style="{StaticResource Text}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource Tab}"
                  x:Name="ConsultasButton" Height="70"
                    Click="ConsultasButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Vistas/Recursos/medico-paciente.png" Style="{StaticResource ImageIcon}"/>
                        <TextBlock Text="CONSULTAS" Style="{StaticResource Text}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="HistoriaButton" Style="{StaticResource Tab}" 
                             Height="80"
                            Click="HistoriaButton_Click">
                <StackPanel Orientation="Horizontal">
                        <Image Source="/Vistas/Recursos/historial-medico.png" Style="{StaticResource ImageIcon}"/>
                    <TextBlock Text="HISTORIAs CLINICAs" Style="{StaticResource Text}"/>
                </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource Tab}"
                   x:Name="PerfilButton" Height="80"
                    Click="PerfilButton_Click"
                    Visibility="{Binding PerfilVisible}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Vistas/Recursos/grupo.png" Style="{StaticResource ImageIcon}"/>
                    <TextBlock Text="Perfiles" Style="{StaticResource Text}"/>
                </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource Tab}"
                           x:Name="CerrarSesionButton" Height="80"
                            Click="CerrarSesionButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Vistas/Recursos/salida.png" Style="{StaticResource ImageIcon}"/>
                        <TextBlock Text="Cerrar Sesión" Style="{StaticResource Text}"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!--Menu-->
            <Border CornerRadius="35"
                    Grid.Column="1">
                <Border.Background>
                    <ImageBrush Opacity="0.5" ImageSource="/Vistas/Recursos/LOGO.png"/>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Barra Superior-->
                        <RowDefinition Height="25"/>
                        <!--Contenido-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="PnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,5,15,0"
                                MouseDown="PnlControlBar_MouseLeftButtonDown"
                                MouseEnter="PnlControlBar_MouseEnter">
                        
                        <Button x:Name="btnMax"
                                Style="{StaticResource BotonS1}"
                                Click="BtnMax_Click">
                            <Image Source="/Vistas/Recursos/max.png" Width="15"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource BotonS1}"
                                Click="BtnMinimize_Click">
                            <Image Source="/Vistas/Recursos/menos.png" Width="16"/>
                        </Button>
                    </StackPanel>
                    
                    <!--Aqui van los 3 paneles primarios -->
                    <StackPanel x:Name="ContentPacientes" 
                        Margin="0,100,0,40" Grid.Row="1">
                        <ContentControl x:Name="Pacientes"
                         VerticalAlignment="Center"
                                        Height="600"/>
                    </StackPanel>
                    <StackPanel x:Name="ContentConsultas" 
                        Margin="0,100,0,40" Grid.Row="1">
                        <ContentControl x:Name="Consultas"
                         VerticalAlignment="Center"
                                        Height="600"/>
                    </StackPanel>
                    <StackPanel x:Name="ContentHistoria" 
                        Margin="0,100,0,40" Grid.Row="1">
                        <ContentControl x:Name="HistoriasClinicas"
                         VerticalAlignment="Center"
                                        Height="600"/>
                    </StackPanel>
                    <StackPanel x:Name="ContentPerfiles" Margin="0,100,0,40" Grid.Row="1">
                        <ContentControl x:Name="Perfiles" VerticalAlignment="Center" Height="600"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>  
</Window>
