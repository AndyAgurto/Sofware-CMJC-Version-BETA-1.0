<Window x:Class="Sofware_CMJC_Version_1._0.Vistas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sofware_CMJC_Version_1._0.VistaModelo" 
        mc:Ignorable="d"
        Title="Login" Height="650" Width="650"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border CornerRadius="50">
        <Border.Background>
            <ImageBrush ImageSource="/Vistas/Recursos/Fondo.jpg"/>
        </Border.Background>

        <Border CornerRadius="40"
            BorderThickness="5"
            Opacity="0.80">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Color2}" Offset="1"/>
                    <GradientStop Color="{StaticResource Color2}" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnClose"
                        Click="BtnClose_Click"
                        Grid.Column="2"
                        Style="{StaticResource BotonS1}">
                        <Image Source="/Vistas/Recursos/cerrar.png"/>
                    </Button>
                    <Button x:Name="btnMinimize"
                        Grid.Column="1"
                        Style="{StaticResource BotonS1}"
                        Click="BtnMinimize_Click">
                        <Image Source="/Vistas/Recursos/menos.png"/>
                    </Button>
                </Grid>

                <StackPanel Width="260"
                        Grid.Row="2"
                        Margin="0,15,0,0">
                    <Image Source="/Vistas/Recursos/LOGO.png"
                       Width="250" Height="310" Stretch="Fill"/>
                    <TextBlock Text="Usuario" 
                        Foreground="Black"
                        FontSize="12"
                        FontFamily="{StaticResource BebasNeueFont}"
                         Margin="0,5,0,0"/>

                    <TextBox x:Name="UsernameTextBox"
                         FontSize="13"
                         Foreground="Black"
                         FontFamily="{StaticResource FranklinGothicFont}"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2.5"
                         Margin="0,5,0,0"
                         Padding="25,0,0,0"
                         VerticalContentAlignment="Center" 
                         Height="28"
                         Text="{Binding LoginName}">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Vistas/Recursos/Acoount.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Contraseña" 
                           Foreground="Black"
                           FontSize="12"
                           FontFamily="{StaticResource BebasNeueFont}"
                           Margin="0,35,0,0"/>

                    <PasswordBox x:Name="PasswordBox"
                         FontSize="13"
                         FontFamily="{StaticResource FranklinGothicFont}"
                         Foreground="Black"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2.5"
                         Margin="0,5,0,0"
                         Padding="25,0,0,0"
                         VerticalContentAlignment="Center" 
                         Height="28"
                        PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Vistas/Recursos/Lock.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>


                    <Button x:Name="LoginButton" 
                        Content="Login"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource BebasNeueFont}"    
                        Grid.Column="2"
                        Margin="0,15,0,0"
                        Foreground="Black"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource BotonS2}" Width="125">
                    </Button>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                        <TextBlock Text="Olvidaste la contraseña? "
                           Foreground="Black"
                            Background="Transparent"
                           FontSize="12"
                           FontFamily="{StaticResource BebasNeueFont}"/>
                        <Button x:Name="Recuperar"
                        Content="Recuperar"
                           Foreground="Black"
                           Background="White"
                           FontSize="12"
                           FontFamily="{StaticResource BebasNeueFont}"     
                           Margin="8,0,0,0"
                           Click="Recuperar_Click">
                        </Button>
                    </StackPanel>
                </StackPanel>

            </Grid>

        </Border>
    </Border>
</Window>
