<Window x:Class="Sofware_CMJC_Version_1._0.Vistas.RecetaEstandar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sofware_CMJC_Version_1._0.Vistas" xmlns:vistamodelo="clr-namespace:Sofware_CMJC_Version_1._0.VistaModelo" d:DataContext="{d:DesignInstance Type=vistamodelo:RecetaEstandarVM}"
        mc:Ignorable="d"
        Title="RecetaEstandar" 
        Height="310" Width="835"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="0"
   BorderThickness="2.5" Margin="0,0,0,0">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0.5,1.5" EndPoint="1,1">
                <GradientStop Color="{StaticResource Color1}" Offset="1"/>
                <GradientStop Color="{StaticResource Color2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                <GradientStop Color="{StaticResource Color4}" Offset="0"/>
                <GradientStop Color="{StaticResource Color4}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Contenido principal -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="35"
                  Grid.Column="0">
                <Border.Background>
                    <ImageBrush Opacity="0.25" ImageSource="/Vistas/Recursos/LOGO.png"/>
                </Border.Background>

                <Grid Margin="0,0,-25,0">
                    <Grid.RowDefinitions>
                        <!--Barra Superior-->
                        <RowDefinition Height="25"/>
                        <!--Titulo-->
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="150"/>
                        <!--Botones-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="PnlControlBar"
                              Grid.Row="0"
                              Orientation="Horizontal"
                              FlowDirection="RightToLeft"
                              Background="#1A7C82"
                              MouseDown="PnlControlBar_MouseLeftButtonDown"
                              MouseLeftButtonUp="PnlControlBar_MouseLeftButtonUp" Margin="0,0,25,0">

                        <Button x:Name="btnBack"
                               Click="btnBack_Click"
                              Style="{StaticResource BotonS1}">
                            <Image Source="/Vistas/Recursos/anterior.png" Width="16"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                              Style="{StaticResource BotonS1}"
                              Click="BtnMinimize_Click">
                            <Image Source="/Vistas/Recursos/menos.png" Width="16"/>
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                               Orientation="Horizontal"
                               Background="#FFFFFF" Margin="0,0,26,0">
                        <Image Margin="0" Source="/Vistas/Recursos/receta.png"/>
                        <TextBlock Text="Receta Unica Estandarizada"
                                  Foreground="#4D4D4D"
                                  Margin="5"
                                  FontSize="35"
                                  FontFamily="{StaticResource BebasNeueFont}"/>
                        <TextBlock Text="Usuario:"
                                  Foreground="#4D4D4D"
                                  HorizontalAlignment="Right"
                                  Margin="80,20,0,0"
                                  FontSize="20"
                                  FontFamily="{StaticResource BebasNeueFont}"/>
                        <TextBlock 
                                  Foreground="#4D4D4D"
                                  HorizontalAlignment="Right"
                                  Margin="10,20,0,0"
                                  FontSize="20"
                                  FontFamily="{StaticResource BebasNeueFont}"
                                  Text="{Binding UserFullName}"/>
                    </StackPanel>
                    <!-- Sección de Lista de Recetas -->
                    <ListView Name="listaRecetas" Grid.Row="3" Margin="10,0,40,0" ItemsSource="{Binding ListaRecetas}" SelectedItem="{Binding RecetaSeleccionada}">
                        <!-- Columnas de la lista -->
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Nombre Receta" DisplayMemberBinding="{Binding NombreArchivo}" />
                                <GridViewColumn Width="Auto"  Header="N°Atencion" DisplayMemberBinding="{Binding NAtencion}"/>
                                <GridViewColumn Width="Auto"  Header="Paciente" DisplayMemberBinding="{Binding Paciente}"/>
                                <GridViewColumn Width="Auto"  Header="Fecha Creación" DisplayMemberBinding="{Binding FechaCreacion}"/>
                                <GridViewColumn Width="Auto"  Header="Fecha Caducidad" DisplayMemberBinding="{Binding FechaCaducidad}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Sección de Botones -->
                    <StackPanel Margin="5,5,26,5" Grid.Row="4">
                  <Button Content="Subir Receta" 
                   Margin="15,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Style="{StaticResource BotonS3}"
                          Command="{Binding SubirRecetaCommand}"/>
                        <Button Content="Eliminar ultima Receta agregada" 
                   Margin="215,-25,0,0"
                   HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                   Style="{StaticResource BotonS3}"
                                Command="{Binding EliminarRecetaCommand}"/>
                        <Button Content="Descargar Receta" 
                         Margin="500,-30,0,0"
                         HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                         Style="{StaticResource BotonS3}"
                                Command="{Binding ExportarFormatoCommand}"/>
                        <Button Content="Salir"
                   Margin="600,-25,0,0"
                   HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                   Style="{StaticResource BotonS2}" Width="155"
                                Command="{Binding VolverAlMenuCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
