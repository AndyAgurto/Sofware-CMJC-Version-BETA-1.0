<UserControl x:Class="Sofware_CMJC_Version_1._0.Vistas.Pacientes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sofware_CMJC_Version_1._0.VistaModelo" 
             d:DataContext="{d:DesignInstance Type=local:PacientesVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="5" Grid.Row="0">
            <!-- Sección de Búsqueda -->
            <Image Source="\Recursos\lupa.png" 
                   Height="25" Width="35" HorizontalAlignment="Left" Margin="2.5,0,0,0"/>
            <TextBox Name="txtBusqueda" Margin="30,-25,450,0"
                     Style="{StaticResource PlaceholderTextBox}"
                     Tag="Buscar por DNI, Nombres o Apellidos del Paciente" 
                     Height="20"
                     TextChanged="txtBusqueda_TextChanged"
                     Text="{Binding Busqueda, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <!-- Sección de Lista de Pacientes -->
        <ListView Name="listaPacientes" Grid.Row="1" Margin="5" ItemsSource="{Binding TodosLosPacientes}" SelectedItem="{Binding PacienteSeleccionado}">
            <!-- Columnas de la lista -->
            <ListView.View>
            <GridView>
                <GridViewColumn Width="Auto" Header="Tipo Doc.ID" DisplayMemberBinding="{Binding TipoIdentidad}"/>
                <GridViewColumn Width="Auto" Header="Documento de ID." DisplayMemberBinding="{Binding DIdentidad}"/>
                <GridViewColumn Width="Auto" Header="Nombre" DisplayMemberBinding="{Binding Nombres}"/>
                <GridViewColumn Width="Auto" Header="Apellidos" DisplayMemberBinding="{Binding Apellidos}"/>
                <GridViewColumn Width="Auto" Header="Edad" DisplayMemberBinding="{Binding Edad}"/>
                <GridViewColumn Width="Auto" Header="Genero" DisplayMemberBinding="{Binding Genero}"/>
                <GridViewColumn Width="Auto" Header="Dirección" DisplayMemberBinding="{Binding Direccion}"/>
                <GridViewColumn Width="Auto" Header="Teléfono" DisplayMemberBinding="{Binding Telefono}"/>
                <GridViewColumn Width="Auto" Header="Aseguradora" DisplayMemberBinding="{Binding Aseguradora}" />
                <GridViewColumn Width="Auto" Header="Estado Civil" DisplayMemberBinding="{Binding EstadoCivil}"/>
                <GridViewColumn Width="Auto" Header="Ocupación" DisplayMemberBinding="{Binding Ocupacion}"/>
                <GridViewColumn Width="Auto" Header="Tipo de Sangre" DisplayMemberBinding="{Binding TipoSangre}"/>
                <GridViewColumn Width="Auto" Header="Estado" DisplayMemberBinding="{Binding Estado}"/>
                <GridViewColumn Width="Auto" Header="Fecha Agregado" DisplayMemberBinding="{Binding FechaAgregado}"/>
            </GridView>
         </ListView.View>
        </ListView>

        <!-- Sección de Botones -->
        <StackPanel Margin="5" Grid.Row="2">
            <Button x:Name="AgregarPaciente"
                    Content="Añadir Nuevo Paciente" 
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource BotonS3}"
                    Command="{Binding AgregarPacienteCommand}"/>
            <Button x:Name="EditarPaciente"
                    Content="Editar Paciente" 
                    Margin="215,-25,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource BotonS3}"
                    Command="{Binding EditarPacienteCommand}"/>
            <Button Content="Eliminar Paciente" 
                    Margin="415,-25,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource BotonS3}"
                    Command="{Binding EliminarPacienteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
